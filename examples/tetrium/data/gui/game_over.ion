screen "game_over"
{
	transparent

	on_enter { call "game_stop" }
	on_key "esc" { return_to "main_menu" }

	music ""

	stretch
	{
		image { color #0008 }
	}

	center "30" "26"
	{
		label
		{
			position "0" "4" "30" "8"
			text_color #ff0
			text `Game over`
		}

		label
		{
			position "0" "13" "30" "3"
			text_color #fff
			text `Enter your name:`
		}

		input
		{
			position "5" "18" "20" "4"
			color #fff8
			text_color #000
			text "John Placeholder"
			on_update { call "player_name = _" }
			on_enter { call "add_score player_name score" return_to "main_menu" enter "statistics" }
		}
	}
}
